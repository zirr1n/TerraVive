<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <EditText
        android:id="@+id/etActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Activity Title"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etActivityDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etActivityDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:inputType="date"/>

    <EditText
        android:id="@+id/etActivityLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnSubmitActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Activity"
        android:layout_marginTop="16dp"/>

</LinearLayout>
